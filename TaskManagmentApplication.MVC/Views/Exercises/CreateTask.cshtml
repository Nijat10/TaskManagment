@model Exercise
@{
    ViewData["Title"] = "Create Task";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form method="post" asp-action="CreateTask">
    <div class="form-group">
        <label asp-for="Startdate"></label>
        <input type="date" asp-for="Startdate" class="form-control" autocomplete="off" />
        <span asp-validation-for="Startdate" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Enddate"></label>
        <input type="date" asp-for="Enddate" class="form-control" autocomplete="off" />
        <span asp-validation-for="Enddate" class="text-danger"></span>
    </div>
    <div class="form-group">
        <select asp-for="Status" class="form-control">
            <option value="0">New</option>
            <option value="1">In progress</option>
            <option value="2">Done</option>
        </select>
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <input type="text" asp-for="Description" class="form-control" autocomplete="off" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div>
        <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Save</button>
    </div>
</form>


