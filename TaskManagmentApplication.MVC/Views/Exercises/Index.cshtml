@model List<Exercise>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h1>Tasks
</h1>
<a class="btn btn-success" asp-action="CreateTask">Create new task</a>
@if (Model.Count > 0)
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Task ID</th>
                <th>Start Date</th>
                <th>End Date</th>
                <th>Description</th>
                <th>Status</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Taskid</td>
                    <td>@item.Startdate</td>
                    <td>@item.Enddate</td>
                    <td>@item.Description</td>
                    <td>@item.Status</td>

                    <td><a class="btn btn-secondary" href="@Url.Action("TaskDetails", "Exercises", new { id = item.Taskid })">Details</a></td>
                    <td><a class="btn btn-secondary" href="@Url.Action("EditTask", "Exercises", new { id = item.Taskid })">Edit Task</a></td>
                    <td><a class="btn btn-danger" href="@Url.Action("DeleteTask", "Exercises", new { id = item.Taskid })">Delete Task</a></td>
                </tr>
            }
        </tbody>
    </table>
}

